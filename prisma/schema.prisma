generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Channel {
  channelId String @id
  uploadsId String
  title String 
  channelThumbnail String 
  videos Video[] 
 
  subscriberCount Int
  videoCount Int
  viewCount Int


  updatedAt Int
  
  @@map("channel")
} 

model Video {
  videoId String @id

  channel Channel @relation(fields: [channelId], references: [channelId])
  channelId String

  title String
  thumbnail String
  description String

  viewCount Int
  likeCount Int
  commentCount Int

  updatedAt Int

  @@map("video")
}